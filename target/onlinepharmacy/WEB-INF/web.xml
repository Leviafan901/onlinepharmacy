<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>com.epam.pharmacy.controller.FrontController</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/dir/*</url-pattern>
	</servlet-mapping>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/errors/error-404.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/jsp/errors/error-403.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/errors/error-500.jsp</location>
	</error-page>
	<context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
	    <param-value>resources.i18n</param-value>
    </context-param>
	<context-param>
	    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
	    <param-value>ru</param-value>
    </context-param>
    <context-param>
       <param-name>javax.servlet.jsp.jstl.fmt.fallbackLocale</param-name>
       <param-value>ru</param-value>
    </context-param>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<display-name>Online Pharmacy</display-name>
</web-app>